{
  "name": "tagix",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "description": "A state management library for TypeScript built on functional programming primitives.",
  "keywords": [
    "tagix",
    "state-management",
    "typescript",
    "functional-programming",
    "tagged-unions",
    "pattern-matching",
    "type-safe",
    "state-machine",
    "immutable",
    "discriminated-unions",
    "exhaustive-matching",
    "type-inference",
    "async-actions",
    "middleware",
    "selectors",
    "error-handling",
    "context"
  ],
  "author": "Chris M. PÃ©rez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrismichaelps/tagix.git"
  },
  "bugs": {
    "url": "https://github.com/chrismichaelps/tagix/issues"
  },
  "homepage": "https://github.com/chrismichaelps/tagix#readme",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "tsup.config.ts"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:prod": "tsup --minify",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "multi-semantic-release": "^3.1.0",
    "semantic-release": "^25.0.3"
  },
  "packageManager": "pnpm@10.28.2"
}